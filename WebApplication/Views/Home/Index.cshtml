@model TextViewModel
@{
    ViewData["Title"] = "Palabras Repetidas";
}

<div class="text-center">
    <h2 class="display-4">Procesador de texto</h2>
</div>

<form asp-action="Count" method="get">
    <div class="form-group">
        <label asp-for="Text">Texto</label>
        <textarea class="form-control" asp-for="Text"></textarea>
        <span class="text-danger" asp-validation-for="Text"></span>
    </div>
    <button class="btn btn-success" type="submit">Procesar</button>
</form>